<AnchorPane xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ProjectViewController">
   <children>
      <Pane prefHeight="700.0" prefWidth="700.0" styleClass="styles.css">
         <children>
            <Label fx:id="projectName" alignment="CENTER" layoutX="128.0" layoutY="67.0" prefHeight="44.0" prefWidth="444.0" text="Project" textAlignment="CENTER">
               <font>
                  <Font name="Dubai Bold" size="24.0" />
               </font>
            </Label>
            <TextFlow fx:id="description" layoutX="58.0" layoutY="211.0" prefHeight="93.0" prefWidth="595.0" />
            <Label fx:id="startDate" layoutX="56.0" layoutY="111.0" prefHeight="20.0" prefWidth="595.0" text="Start date:">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font></Label>
            <Label fx:id="endDate" layoutX="56.0" layoutY="141.0" prefHeight="20.0" prefWidth="595.0" text="End date:">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font></Label>
            <Label fx:id="projectLeaderLabel" layoutX="56.0" layoutY="176.0" prefHeight="20.0" prefWidth="595.0" text="Project leader: ">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font></Label>
            <ListView fx:id="listOfDevelopersOnProject" layoutX="56.0" layoutY="344.0" prefHeight="203.0" prefWidth="255.0" />
