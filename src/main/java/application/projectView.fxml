               <font>
                  <Font name="System Bold" size="14.0" />
               </font></Label>
            <Button fx:id="AddActivityButton" layoutX="408.0" layoutY="565.0" mnemonicParsing="false" onAction="#addActivity" prefHeight="25.0" prefWidth="255.0" text="Add Activity" />
            <ListView fx:id="listOfActivitiesOnProject" layoutX="408.0" layoutY="340.0" prefHeight="210.0" prefWidth="255.0" />
            <Label layoutX="408.0" layoutY="316.0" prefHeight="17.0" prefWidth="98.0" text="Activities">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Label>
            <Button fx:id="apply" layoutX="56.0" layoutY="565.0" mnemonicParsing="false" onAction="#onApply" prefHeight="25.0" prefWidth="255.0" text="Apply" />
            <Button fx:id="backButton" layoutX="13.0" layoutY="14.0" mnemonicParsing="false" onAction="#back" prefHeight="25.0" prefWidth="87.0" text="Back" />
         </children>
         <stylesheets>
            <URL value="@styles.css" />
         </stylesheets>
      </Pane>
   </children>
</AnchorPane>
